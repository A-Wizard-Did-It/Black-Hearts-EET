IF
	Global("Chapter","GLOBAL",7)
	Global("BHBG1Quest","GLOBAL",16)
	Global("IllaseraCellerBuff","LOCALS",0)
	AreaCheck("BG0112")
	
THEN
RESPONSE #100
	SetGlobal("IllaseraCellerBuff","LOCALS",1)
	ApplySpell(Myself,WIZARD_INVISIBILITY)
	Continue()
END


